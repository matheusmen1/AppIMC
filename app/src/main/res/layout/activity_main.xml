<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f2c79"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="28dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="casual"
        android:text="Seu Nome"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#9f90ea"
        android:ems="10"
        android:fontFamily="casual"
        android:inputType="text"
        android:text="Matheus"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbMasculino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:checked="true"
            android:fontFamily="casual"
            android:text="Masculino"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbFeminino"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:text="Feminino"
            android:textAlignment="center"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="casual"
        android:text="Peso"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/skPeso"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:max="150"
        android:min="10"
        android:progress="90"
        android:progressBackgroundTint="#000020"
        android:progressTint="#9f90ea" />

    <TextView
        android:id="@+id/tvPeso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="90"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="casual"
        android:text="Altura"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <SeekBar
        android:id="@+id/skAltura"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:max="200"
        android:min="50"
        android:progress="175"
        android:progressBackgroundTint="#000020"
        android:progressTint="#9f90ea" />

    <TextView
        android:id="@+id/tvAltura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="1.75"
        android:textAlignment="center"
        android:textColor="#F0F0F0"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="149dp"
        android:layout_marginTop="32dp"
        android:clickable="false"
        android:contextClickable="false"
        android:longClickable="false"
        android:overScrollMode="never"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbars="none"
        app:cardBackgroundColor="#F0F0F0"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp">

        <EditText
            android:id="@+id/etCondicao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:backgroundTint="#F0F0F0"
            android:clickable="false"
            android:contextClickable="false"
            android:cursorVisible="false"
            android:ems="10"
            android:focusable="false"
            android:fontFamily="casual"
            android:gravity="top|start"
            android:inputType="text|textMultiLine"
            android:lines="4"
            android:linksClickable="false"
            android:longClickable="false"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:scrollHorizontally="false"
            android:singleLine="false"
            android:textAlignment="textStart"
            android:textColor="#9f90ea"
            android:textSize="18sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp"
        android:gravity="center">

        <Button
            android:id="@+id/btCalcular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#9f90ea"
            android:fontFamily="casual"
            android:text="Calcular IMC"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btArmazenar"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#e89f9f"
            android:fontFamily="casual"
            android:text="Armazenar"
            android:textColor="#F0F0F0"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>